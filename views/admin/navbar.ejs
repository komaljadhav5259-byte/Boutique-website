            });
        });

        // Real-time updates simulation
        setInterval(() => {
            // Simulate real-time updates to stats
            const notificationsBadge = document.querySelector('.notification-badge');
            const currentCount = parseInt(notificationsBadge.textContent);
            if (Math.random() > 0.7 && currentCount < 10) {
