                notificationsBadge.classList.add('pulse-animation');
                setTimeout(() => {
                    notificationsBadge.classList.remove('pulse-animation');
                }, 2000);
            }
        }, 10000); // Check every 10 seconds

        // Initialize tooltips
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
